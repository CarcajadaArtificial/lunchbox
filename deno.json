{
  "name": "@lunchbox/ui",
  "version": "3.0.0-alpha.4",
  "license": "MIT",
  "exports": {
    ".": "./mod.ts"
  },
  "tasks": {
    "init:clean": "deno run -A tasks.ts init-clean",
    "init:map": "deno run -A tasks.ts init-map"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  },
  "fmt": { "exclude": [".github/dep", "*.md"], "singleQuote": true },
  "imports": {
    "@deno/gfm": "jsr:@deno/gfm@^0.11.0",
    "preact": "npm:preact@^10.26.6",
    "zod": "npm:zod@^3.25.36"
  },
  "publish": {
    "include": [
      "mod.ts",
      "src/*.ts",
      "mod.css"
    ]
  },
  "nodeModulesDir": "auto",
  "lock": false
}
